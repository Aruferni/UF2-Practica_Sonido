<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#0099FF"
        android:id="@+id/linearLayout2_1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Autor: Albert Fernandez Niell"
            android:gravity="center"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2_1"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout1_2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sound"
            android:id="@+id/imageView3" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout1_2"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout1_3">

        <Button
            android:text="Song"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:onClick="onClickSong"/>

        <Button
            android:text="Link"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:onClick="onClickLink"/>

        <Button
            android:text="SD"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:onClick="onClickSD"/>

        <Button
            android:text="YT"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:onClick="onClickYoutube"/>

        <Button
            android:text="Video"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:onClick="onClickVideo"/>
    </LinearLayout>

</RelativeLayout>
